
{
  "name": "next-themes",
  "version": "0.3.0",
  "description": "Perfect Next.js dark mode in 2 lines of code. Support System preference and any other theme with no flashing",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "author": "Paco Coursey",
  "license": "MIT",
  "homepage": "https://github.com/pacocoursey/next-themes#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/pacocoursey/next-themes.git"
  },
  "bugs": {
    "url": "https://github.com/pacocoursey/next-themes/issues"
  },
  "keywords": [
    "next",
    "next.js",
    "react",
    "dark-mode",
    "theme"
  ],
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.0",
    "@types/react": "^18.0.21",
    "jest": "^29.2.1",
    "jest-environment-jsdom": "^29.2.1",
    "next": "^13.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.3.0",
    "typescript": "^4.8.4"
  }
}
