
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to the archives folder
    match /archives/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // Default rule for all other paths - requires authentication
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
