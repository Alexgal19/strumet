
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "role": {
          ".write": "(!data.exists() && newData.val() == 'guest') || (root.child('users').child(auth.uid).child('role').val() == 'admin' && newData.val() != data.val())"
        }
      }
    },
    ".read": "auth != null",
    ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin'"
  }
}
