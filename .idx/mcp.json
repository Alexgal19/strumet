{
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "mcp"
      ]
    },
    "next-devtools": {
      "command": "npx",
      "args": [
        "next-devtools-mcp@latest"
      ]
    }
  },
  "enabledTools": {
    "firebase": [
      "firebase_logout",
      "firebase_get_project",
      "firebase_list_apps",
      "firebase_list_projects",
      "firebase_get_sdk_config",
      "firebase_create_project",
      "firebase_create_app",
      "firebase_create_android_sha",
      "firebase_get_environment",
      "firebase_update_environment",
      "firebase_init",
      "firebase_get_security_rules",
      "firebase_read_resources",
      "firebase_login"
    ],
    "next-devtools": [
      "browser_eval",
      "enable_cache_components",
      "nextjs_docs",
      "nextjs_runtime",
      "upgrade_nextjs_16",
      "init",
      "nextjs_index",
      "nextjs_call"
    ]
  }
}